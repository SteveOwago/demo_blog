<% content_for :page_title, @post.title %>
<div class="container">
  <div class="row mt-5">
    <div class="col-sm-8 offset-2">
      <div class="row">
        <div class="col-sm-9">
          <p class="text-muted"><%= @post.body %></p>
        </div>
        <div class="col-sm-3">
          <%= link_to "Edit", edit_post_path(@post), class: "btn btn-secondary" %>
          &emsp;
          <%= link_to "Delete", post_path(@post), method: :delete, data:{ confirm:"Are you sure you want to delete this post?" }, class:"btn btn-danger" %>
        </div>
      </div>
    </div>
  </div>
</div>